<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_background"
    tools:context="percept.bg.blockglobal.activity.home_navigation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/homescreen_topbar"
        android:gravity="top"
        android:background="#ebf1fa">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_btc_layout">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:background="@color/WHITE"
                        android:id="@+id/add_wallet_layout">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:id="@+id/btc_img"
                            android:src="@drawable/btc_wallet"/>

                        <percept.bg.blockglobal.activity.AutoResizeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btc_wallet"
                            android:typeface="serif"
                            android:singleLine="true"
                            android:layout_toRightOf="@+id/btc_img"
                            android:textAlignment="center"
                            android:layout_toLeftOf="@+id/refresh_btc_wallet"
                            android:layout_marginRight="@dimen/margin_medium"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:id="@+id/btc_wallet_text"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/font_xlarge"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/refresh_32"
                            android:clickable="true"
                            android:padding="10dp"
                            android:id="@+id/refresh_btc_wallet"
                            android:layout_toLeftOf="@+id/add_new_wallet"
                            android:layout_centerVertical="true" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/add_more"
                            android:clickable="true"
                            android:padding="10dp"
                            android:id="@+id/add_new_wallet"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:clickable="true"
                        android:layout_below="@+id/add_wallet_layout"
                        android:id="@+id/btcwalletList">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_bch_layout"
                    android:layout_below="@id/add_btc_layout">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:background="@color/WHITE"
                        android:id="@+id/add_bch_wallet_layout">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:id="@+id/bch_img"
                            android:src="@drawable/bch_wallet"/>
                        <percept.bg.blockglobal.activity.AutoResizeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bch_wallet"
                            android:singleLine="true"
                            android:layout_toRightOf="@+id/bch_img"
                            android:textAlignment="center"
                            android:layout_toLeftOf="@+id/refresh_bch_wallet"
                            android:layout_marginRight="@dimen/margin_medium"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:typeface="serif"
                            android:id="@+id/bch_wallet_text"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/font_xlarge"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/refresh_32"
                            android:clickable="true"
                            android:padding="10dp"
                            android:id="@+id/refresh_bch_wallet"
                            android:layout_toLeftOf="@+id/add_bch_new_wallet"
                            android:layout_centerVertical="true" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/add_more"
                            android:clickable="true"
                            android:padding="10dp"
                            android:id="@+id/add_bch_new_wallet"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:clickable="true"
                        android:layout_below="@+id/add_bch_wallet_layout"
                        android:id="@+id/bchwalletList">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_ltc_layout"
                    android:layout_below="@id/add_bch_layout">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:background="@color/WHITE"
                        android:id="@+id/add_ltc_wallet_layout">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:id="@+id/ltc_img"
                            android:src="@drawable/lite_wallet"/>
                        <percept.bg.blockglobal.activity.AutoResizeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ltc_wallet"
                            android:typeface="serif"
                            android:singleLine="true"
                            android:layout_toRightOf="@+id/ltc_img"
                            android:textAlignment="center"
                            android:layout_toLeftOf="@+id/refresh_ltc_wallet"
                            android:layout_marginRight="@dimen/margin_medium"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:id="@+id/ltc_wallet_text"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/font_xlarge"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/refresh_32"
                            android:clickable="true"
                            android:padding="10dp"
                            android:id="@+id/refresh_ltc_wallet"
                            android:layout_toLeftOf="@+id/add_ltc_new_wallet"
                            android:layout_centerVertical="true" />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/add_more"
                            android:clickable="true"
                            android:padding="10dp"
                            android:id="@+id/add_ltc_new_wallet"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:clickable="true"
                        android:layout_below="@+id/add_ltc_wallet_layout"
                        android:id="@+id/ltcwalletList">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_xrp_layout"
                    android:layout_below="@id/add_ltc_layout">
                    <!--RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:background="@color/WHITE"
                        android:id="@+id/add_xrp_wallet_layout">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:src="@drawable/ripple_wallet"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/xrp_wallet"
                            android:typeface="serif"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/font_xlarge"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/add_more"
                            android:clickable="true"
                            android:id="@+id/add_xrp_new_wallet"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_medium"/>
                    </RelativeLayout-->
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:clickable="true"
                        android:id="@+id/xrpwalletList">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:itemIconTint="@color/tab_item_foreground"
            app:menu="@menu/navigation" />
    </FrameLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="55dp"
    android:layout_gravity="bottom"
    android:background="@color/line">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
